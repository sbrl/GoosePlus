<?xml version="1.0" encoding="UTF-8"?>
<OpenSearchDescription
	xmlns="http://a9.com/-/spec/opensearch/1.1/"
	xmlns:moz="http://www.mozilla.org/2006/browser/search/">
	
	<ShortName>{{name}}</ShortName>
	<Description>{{description}}</Description>
	<Image height="16" width="16" type="image/png">{{base_url}}/favicon.ico</Image>
	<Image height="512" width="512" type="image/png">{{base_url}}/favicon-512.ico</Image>
	<Url type="text/html" method="get" template="{{base_url}}?action=redirect&amp;query={searchTerms}" />
	
</OpenSearchDescription>
